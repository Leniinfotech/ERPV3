{
  "Jwt": {
    "Authority": "https://idp.example.com/",
    "Audience": "erp.api"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=ERP;TrustServerCertificate=True;Encrypt=True;"
  },
  "Logging": {
    "Mode": "Standard",
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Correlation": {
    "HeaderName": "X-Correlation-Id"
  },
  "Security": {
    "RequireHttps": true,
    "HstsDays": 30
  },
  "AllowedHosts": "*"
}